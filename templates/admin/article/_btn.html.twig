<form method="post" style="display: inline-block;" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fa fa-close"></i></button>
</form>
<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
