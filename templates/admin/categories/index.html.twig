{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Categories</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin') }}">Dashboard</a></li>
                    <li class="breadcrumb-item active">Categories</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-chart">
                <div class="card-header row" style="margin: 0;">
                    <div class="col-md-6">
                        <h4 class="card-title">Categories</h4>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-success pull-right" href="{{ path('categories_new') }}">Ajouter <i class="fa fa-plus"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="datatable table table-stripped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.title }}</td>
                            <td>
                                {{ include('admin/categories/_btn.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
