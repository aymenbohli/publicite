<form style="display: inline-block;" method="post" action="{{ path('categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fa fa-close"></i></button>
</form>
<a href="{{ path('categories_edit', {'id': category.id}) }}" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>